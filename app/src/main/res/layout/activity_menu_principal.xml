<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#F57C00"
	android:orientation="vertical"
	tools:context=".MenuPrincipal">
	
	<LinearLayout
		android:id="@+id/layout_MP2"
		android:layout_width="217dp"
		android:layout_height="49dp"
		android:layout_gravity="end"
		android:orientation="horizontal">
		
		<ImageView
			android:id="@+id/imagen_registro_logo_mini"
			android:layout_width="66dp"
			android:layout_height="49dp"
			android:layout_gravity="left"
			android:layout_marginTop="1dp"
			android:contentDescription="@string/imagen_registro_logo_mini"
			app:srcCompat="@drawable/pyg1" />
		
		<TextView
			android:id="@+id/txt_woofpets_mini_String"
			android:layout_width="152dp"
			android:layout_height="49dp"
			android:layout_gravity="end"
			android:gravity="center"
			android:fontFamily="sans-serif-black"
			android:text="@string/txt_woofpets_mini_String"
			android:textSize="30sp"
			android:textStyle="bold" />
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/layout_MP1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical">
		
		<TextView
			android:id="@+id/txt_menu_ppal"
			android:layout_width="238dp"
			android:layout_height="149dp"
			android:layout_gravity="center"
			android:layout_marginTop="30dp"
			android:gravity="center"
			android:text="@string/txt_menu_ppal"
			android:textColor="@color/black"
			android:textSize="30sp"
			android:textStyle="bold" />
		
		<Button
			android:id="@+id/button_mppal_registro_mascotas"
			android:layout_width="300dp"
			android:layout_height="55dp"
			android:layout_gravity="center"
			android:layout_marginTop="0dp"
			android:text="@string/button_mppal_registro_mascotas"
			android:textSize="20sp"
			android:textStyle="bold"
			app:backgroundTint="#F57C00" />
		
		<Button
			android:id="@+id/button_mppal_mis_mascotas"
			android:layout_width="300dp"
			android:layout_height="55dp"
			android:layout_gravity="center"
			android:layout_marginTop="20dp"
			android:text="@string/button_mppal_mis_mascotas"
			android:textSize="20sp"
			android:textStyle="bold"
			app:backgroundTint="#F57C00"/>
		
		<Button
			android:id="@+id/button_mppal_ubicar_veterinarias"
			android:layout_width="300dp"
			android:layout_height="55dp"
			android:layout_gravity="center"
			android:layout_marginTop="20dp"
			android:text="@string/button_mppal_ubicar_veterinarias"
			android:textSize="20sp"
			android:textStyle="bold"
			app:backgroundTint="#F57C00"/>
		
		<Button
			android:id="@+id/button_cerrar_sesion"
			android:layout_width="300dp"
			android:layout_height="55dp"
			android:layout_gravity="center"
			android:layout_marginTop="20dp"
			android:text="@string/button_cerrar_sesion"
			android:textSize="20sp"
			android:textStyle="bold"
			app:backgroundTint="#F57C00"/>
	</LinearLayout>

</LinearLayout>